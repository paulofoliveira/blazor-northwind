@page "/orders"

<PageTitle>Orders</PageTitle>

<h1>Orders</h1>

<DataGrid TItem="OrderDto"
          Data="@OrderList"
          @bind-SelectedRow="@SelectedOrder"
          ReadData="@OnReadData"
          TotalItems="@Total"
          ShowPager
          ShowPageSizes
          PageSize="10"
          Responsive>
    <DataGridCommandColumn />
    <DataGridColumn Field="@nameof(OrderDto.Id)" Caption="#" />
    <DataGridColumn Field="@nameof(OrderDto.Date)" Caption="Order Date" Sortable="true" SortDirection="SortDirection.Descending" DisplayFormat="{0:dd/MM/yyyy}" />
    <DataGridColumn Field="@nameof(OrderDto.Customer)" Caption="Customer" />
    <DataGridColumn Field="@nameof(OrderDto.Employee)" Caption="Employee" Sortable="false" />
    <DataGridColumn Field="Ship.Date" Caption="Ship Date" Sortable="false" DisplayFormat="{0:dd/MM/yyyy}" />
    <DataGridColumn Field="Ship.Name" Caption="Ship Name" Sortable="false" />
    <DataGridColumn Field="Ship.Address" Caption="Ship Address" Sortable="false" />
    <DataGridColumn Field="Ship.City" Caption="Ship City" Sortable="false" />
    <DataGridColumn Field="Ship.PostalCode" Caption="Ship Postal Code" Sortable="false" />
    <DataGridColumn Field="Ship.Country" Caption="Ship Country" Sortable="false" />
</DataGrid>